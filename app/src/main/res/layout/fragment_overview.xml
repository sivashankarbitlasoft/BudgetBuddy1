<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overview_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OverviewFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:contentDescription="@string/addExpense"
        android:src="@drawable/ic_add"
        app:shapeAppearance="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <TextView
        android:id="@+id/txtViewBudgetOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remBalance"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />
        <ProgressBar
            android:id="@+id/progressbarOverview"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/teal_700"
            android:layout_marginBottom="8dp"
            />
    <TextView
        android:id="@+id/textViewProgressDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spentOrBudget"
        android:textSize="16sp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>