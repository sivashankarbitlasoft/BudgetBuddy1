<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overview_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BudgetFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_bt_add_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:background="#27ae60"
        app:shapeAppearance="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:contentDescription="@string/addBudget"
        android:src="@drawable/ic_add" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/budgetLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#27ae60"
            >
            <TextView
                android:id="@+id/tvCurrentBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Budget: $0.00"
                android:textColor="@android:color/white"
                android:textSize="25dp"

                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/budgetLinerLayout">

        <EditText
            android:id="@+id/editTextUpdateBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new budget"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btUpdateBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update"
            android:layout_marginTop="8dp"
            android:backgroundTint="#27ae60"
            />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>